{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "properties": {
        "rbacProxy": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "Never",
                                "IfNotPresent"
                            ]
                        }
                    }
                }
            }
        },
        "manager": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "Never",
                                "IfNotPresent"
                            ]
                        }
                    }
                },
                "log": {
                    "type": "object",
                    "properties": {
                        "format": {
                            "type": "string",
                            "enum": [
                                "json",
                                "console"
                            ]
                        },
                        "level": {
                            "type": "string",
                            "enum": [
                                "debug",
                                "info",
                                "warn",
                                "error"
                            ]
                        },
                        "timestamp": {
                            "type": "object",
                            "properties": {
                                "format": {
                                    "type": "string",
                                    "enum": [
                                        "iso-8601",
                                        "epoch-second",
                                        "epoch-millis",
                                        "epoch-nano"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
